<Window x:Class="AdoTuincentrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoTuincentrum"
        mc:Ignorable="d"
        Title="WPFOpgave2" Height="200" Width="500">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Test" Height="25" Width="80" Click="Button_Click"></Button>
        <Label Grid.Row="1" Content="{Binding Path=Message, UpdateSourceTrigger=PropertyChanged}" Height="25" Width="150"></Label>
    </Grid>
</Window>
