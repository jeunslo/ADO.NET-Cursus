<Window x:Class="WpfOpgave5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOpgave5"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="110*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="1" >
            <Label Content="Soort:" VerticalAlignment="Bottom"></Label>
            <TextBox Name="textBoxSoort" Width="150" Height="25" VerticalAlignment="Bottom" Margin="20 0"></TextBox>
        </StackPanel>
        <Button Content="Bereken gemiddelde kostprijs" Grid.Column="1" Grid.Row="1" Height="25" Width="210" HorizontalAlignment="Left" Click="Button_Click"></Button>
        <Label VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" Name="prijsLabel"></Label>
    </Grid>
</Window>
